{
  "parser"  : "babel-eslint",
  "plugins": [
    "import",
    "react",
    "babel"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": "google",
  "rules": {
    "strict": 0,
    "require-jsdoc": 0,
    "comma-dangle": 0,
    "curly": 0,
    "default-case": 0,
    "new-cap": [2, {"capIsNew": false, "newIsCap": true}],
    "no-floating-decimal": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "no-unused-expressions": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-warning-comments": [0, { "terms": ["todo", "fix"], "location": "anywhere" }],
    "object-curly-spacing": [2, "always"],
    "object-shorthand": 0,
    "padded-blocks": 0,
    "react/sort-comp": 0,
    "import/no-unresolved": [2, {"commonjs": true, "amd": true}],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "react/jsx-pascal-case": 1,
    "react/jsx-uses-react": 1
  },
  "settings": {
    "import/ignore": [
      "node_modules",
      "\\.json$",
      "\\.scss"
    ],
    "import/parser": "babel-eslint",
    "import/resolve": {
      "extensions": [
        ".js",
        ".jsx",
        ".json"
      ]
    }
  }
}
